<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Dialog_NoTitle" parent="AlertDialog.AppCompat.Light">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="BackButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Back</item>
        <item name="android:drawableLeft">@mipmap/img_arrow_left</item>
        <item name="android:background">@drawable/abc_button_back</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">1dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">54dip</item>
        <item name="android:paddingRight">5dip</item>

    </style>

    <style name="TextInputLayout">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="TextInputLayout.Text">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="TextInputLayout.Edit">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/text_input_selector</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

</resources>
