<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView android:layout_width="match_parent" android:id="@+id/loadMoreText"
        android:layout_height="match_parent" android:text="@string/TextLoadMore"
        android:padding="5dp" android:gravity="center_horizontal"
        />
    
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/loadinglayout"
        android:layout_gravity="center_horizontal" android:gravity="center_vertical"
        android:visibility="gone"
        >
        
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
            />
        
        <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content" android:text="@string/LoadingText"
	        android:padding="5dp" android:gravity="center"
	        />
    </LinearLayout>

</LinearLayout>
